<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical" >


    <ScrollView
        android:layout_above="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FEFEFE"
            android:orientation="vertical" >
            
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="订单编号:"
                android:textSize="@dimen/x30"
                android:textColor="@color/tabbar_item_text_normal" />

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="X-10001"
                android:textSize="@dimen/x30"
                android:textColor="@color/main_primary" />
            
             

            </LinearLayout>
            
             <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="课程名称:"
                android:textSize="@dimen/x30"
                android:textColor="@color/tabbar_item_text_normal" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="少儿网球"
                android:textSize="@dimen/x30"
                android:textColor="@color/main_primary" />
            
             

            </LinearLayout>
            
            
            
             <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
             <LinearLayout
            android:id="@+id/ll_coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="课程教练:"
                android:textSize="@dimen/x30"
                android:textColor="@color/tabbar_item_text_normal" />

            <TextView
                android:id="@+id/tv_coach_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="刘海然"
                android:textSize="@dimen/x30"
                android:textColor="@color/main_primary" />
            
            

            </LinearLayout>
             
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
             
             <LinearLayout
                 android:id="@+id/ll_course_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="开课时间:"
                android:textSize="@dimen/x30"
                android:textColor="@color/tabbar_item_text_normal" />

            <TextView
                android:id="@+id/tv_course_starttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="2015-06-08"
                android:textSize="@dimen/x30"
                android:textColor="@color/main_primary" />
            
            </LinearLayout>
            
             
             
             <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
             
             <LinearLayout
                 android:id="@+id/ll_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="课程时长:"
                android:textSize="@dimen/x30"
                android:textColor="@color/tabbar_item_text_normal" />

            <TextView
                android:id="@+id/tv_course_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="1小时"
                android:textSize="@dimen/x30"
                android:textColor="@color/main_primary" />
            
           

            </LinearLayout>
             
               <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
             
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE"
            android:orientation="horizontal" >
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="课程价格:"
                android:textSize="@dimen/x30"
                android:textColor="@color/tabbar_item_text_normal" />

            <TextView
                android:id="@+id/tv_course_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="100 元"
                android:textSize="@dimen/x30"
                android:textColor="@color/main_primary" />

            </LinearLayout>
            
<View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x20"
                android:background="#F0F0F0"
                />

            <RelativeLayout
                android:id="@+id/rl_youhuiquan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用优惠券"
                    android:textColor="@color/text_font_purple" />

                  <TextView
                    android:id="@+id/tv_youhuiquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/bt_buy"
                    android:textColor="@color/text_font_purple" />
                
                <Button
                    android:id="@+id/bt_buy"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buy_arrow" />
            </RelativeLayout>

            



<View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x20"
                android:background="#F0F0F0"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginBottom="@dimen/x20"
                    android:textSize="@dimen/x35"
                    android:text="支付方式"
                    android:textColor="@color/tabbar_item_text_normal" />
                
                <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
                <LinearLayout
                    android:id="@+id/ll_zfb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x20"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/buy_zfb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x35"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:text="支付宝支付"
                        android:textSize="@dimen/x30"
                        android:textColor="@color/main_primary" />
                    
                    
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buy_arrow" /> 
                </LinearLayout>
                
                
                <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
                

                
                <!-- <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x250"
                android:background="#F0F0F0"
                /> -->
                 <LinearLayout
                    android:id="@+id/ll_weichat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x20"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x25"
                        android:background="@drawable/buy_weichat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_weight="1.0"
                        android:text="微信支付"
                        android:textColor="@color/main_primary" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buy_arrow" />
                </LinearLayout>

                 
                 <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
                <LinearLayout
                    android:id="@+id/ll_yl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x20"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:background="@drawable/buy_yl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_weight="1.0"
                        android:text="银联支付"
                        android:textColor="@color/main_primary" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buy_arrow" />
                </LinearLayout> 
            </LinearLayout>
 		<View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />
           
        </LinearLayout>
    </ScrollView>

     <LinearLayout
         android:id="@+id/ll_bottom"
         android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="0.11"
                    android:text="支付总价："
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="99"
                    android:textSize="@dimen/x30"
                     />

                <Button
                    android:id="@+id/bt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buy_button_yhq"
                    android:textSize="@dimen/x30"
                    android:text="支付" />
            </LinearLayout>
</RelativeLayout>